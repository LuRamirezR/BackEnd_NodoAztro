<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="myPU">
        <!-- Entity classes to be used by JPA -->
        <!-- Supermercado -->
        <class>com.example.06-EjerciciosNodoBD.models.supermercado.Producto</class>
        <class>com.example.06-EjerciciosNodoBD.models.supermercado.Cliente</class>
        <class>com.example.06-EjerciciosNodoBD.models.supermercado.Marca</class>
        <class>com.example.06-EjerciciosNodoBD.models.supermercado.Compras</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5434/ejercicios_nodo"/>
            <property name="jakarta.persistence.jdbc.user"
                      value="postgres"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="admin"/>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>